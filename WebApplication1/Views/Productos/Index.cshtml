@model IEnumerable<WebApplication1.Models.ProductModel>

@{
    ViewBag.Title = "Productos";
}

<h2>Productos</h2>

<p>
    @Html.ActionLink("Crear Nuevo", "Create")
</p>
<table class="table">
    <tr>
        <th>@Html.DisplayNameFor(model => model.nombreProducto)</th>
        <th>@Html.DisplayNameFor(model => model.precioUnitario)</th>
        <th>@Html.DisplayNameFor(model => model.cantidadStock)</th>
        <th>@Html.DisplayNameFor(model => model.categoriaProducto)</th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>@Html.DisplayFor(m => item.nombreProducto)</td>
        <td>@Html.DisplayFor(m => item.precioUnitario)</td>
        <td>@Html.DisplayFor(m => item.cantidadStock)</td>
        <td>@Html.DisplayFor(m => item.categoriaProducto)</td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.id }) |
            @Html.ActionLink("Details", "Details", new { id = item.id }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.id })
        </td>
    </tr>
}

</table>
