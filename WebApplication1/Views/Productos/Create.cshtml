@model WebApplication1.Models.ProductModel

@{
    ViewBag.Title = "Crear Producto";
}

<h2>Crear Producto</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    @Html.ValidationSummary(true, "Por favor corrige los errores.")

    <div class="form-group">
        @Html.LabelFor(m => m.nombreProducto)
        @Html.TextBoxFor(m => m.nombreProducto, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.nombreProducto)
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.precioUnitario)
        @Html.TextBoxFor(m => m.precioUnitario, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.precioUnitario)
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.cantidadStock)
        @Html.TextBoxFor(m => m.cantidadStock, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.cantidadStock)
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.categoriaProducto)
        @Html.TextBoxFor(m => m.categoriaProducto, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.categoriaProducto)
    </div>

    <button type="submit" class="btn btn-primary">Crear</button>
    @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-default" })
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
